---
interface Props {
	source: string;
}

const { source } = Astro.props;

const starting_address = 0x1000;

---


<div class="flex flex-col items-center bg-slate-900 p-5 gap-y-5 rounded-xl">
    <b class="font-mono">x86 INSTRUCTIONS</b>
    <!-- <div class="rounded"> -->
    <div class="flex">
        <div class="h-full w-28 bg-slate-800">
            <pre>{}</pre>  
        </div>
        <code id="code" class="whitespace-pre">{source}</code>
    </div>
    <!-- </div> -->
</div>
<script>
    import hljs from 'highlight.js/lib/core';
    import x86asm from 'highlight.js/lib/languages/x86asm';

    hljs.registerLanguage('x86asm', x86asm);

    hljs.highlightElement(document.getElementById('code'));

</script>